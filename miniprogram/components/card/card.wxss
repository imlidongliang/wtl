.card {
    overflow: hidden;
}

.card-inner {
    margin-left: 16px;
    margin-right: 16px;
    background-color: #fff;
    border-radius: 10px;
}

.card-header {
    display: flex;
    align-items: center;
    padding: 15px 20px 0;
}

.card-header .avatar {
    margin-right: 20px;
    width: 50px;
    height: 50px;
    background-color: #f2f2f2;
    border-radius: 50%;
    overflow: hidden;
}

.heading {
    flex: 1;
    color: #999;
    font-size: 14px;
}

.author {
    font-size: 16px;
    color: #333;
}

.card-body {
    padding: 10px 20px 0;
}

.title,
.description {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    overflow: hidden;
    color: #333;
    line-height: 1.5;
}

.title {
    margin-bottom: 4px;
    font-weight: 700;
    font-size: 18px;
}

.description {
    margin-bottom: 10px;
    font-size: 16px;
}

.image-list {
    display: flex;
    align-items: center;
    margin-left: -2px;
    margin-right: -2px;
    margin-bottom: 10px;
}

.image-item {
    width: 33.333333%;
    height: 200rpx;
    padding: 0 2px;
    overflow: hidden;
}

.image-item .image {
    width: 100%;
    height: 100%;
}

.location-wrap {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
}

.location {
    margin-right: 4px;
    padding: .15em .4em;
    background-color: #f7f7f7;
    font-size: 12px;
    min-width: 8px;
    line-height: 1.2;
    border-radius: 18px;
    color: #767a90;
}

.card-footer {
    position: relative;
    display: flex;
    align-items: center;
    padding: 15px 20px;
}

.like-wrap {
    display: flex;
    align-items: center;
    width: calc(100% - 110px);
}

.like-user-list {
    display: flex;
    align-items: center;
}

.like-user-item {
    position: relative;
    margin-left: -10px;
    border: 2px solid #fff;
    overflow: hidden;
    border-radius: 50%;
}

.like-user-item:first-child {
    margin-left: -2px;
    z-index: 2;
}

.like-user-item:nth-child(2) {
    z-index: 1;
}

.like-user-item .user-avatar {
    width: 26px;
    height: 26px;
    background-color: #f2f2f2;
}

.like-user-item .user-avatar .avatar {
    width: 100%;
    height: 100%;
}

.like-info {
    padding: 3px 8px 3px 18px;
    margin-left: -14px;
    background-color: #f7f7f7;
    font-size: 12px;
    border-radius: 18px;
    color: #767a90;
}

.tool-bar {
    display: flex;
    align-items: center;
    width: 120px;
    margin-right: -10px;
}

.tool-btn {
    position: relative;
    display: flex;
    align-items: center;
    padding: 0 10px;
}

.tool-btn .icon {
    display: block;
    width: 20px;
    height: 20px;
}